<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppCompatAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Base.NoueTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Remove ActionBar for specific UI -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Preference -->
        <item name="preferenceTheme">@style/NoueTheme.AppPreference.Theme</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialog</item>

        <!-- Scrollbar -->
        <item name="android:smoothScrollbar">true</item>
        <item name="android:fadeScrollbars">true</item>

        <!-- Colors -->
        <item name="colorError">@color/errorTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnBackground">?attr/colorOnPrimary</item>

        <!-- Light nav & status bars -->
        <item name="isLightTheme">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>

        <!-- Enable transparent nav & status bars
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
    </style>

    <style name="NoueTheme" parent="Base.NoueTheme" />
    <style name="NoueTheme.Intro" />

    <style name="NoueTheme.Intro.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="NoueTheme.Intro.App">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NoueTheme.Intro.Button" parent="NoueTheme.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/secondaryRippleColor</item>
    </style>

    <style name="NoueTheme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="NoueTheme.Login" />

    <style name="NoueTheme.Login.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorPrimary">?attr/colorAccent</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="hintTextColor">?attr/colorAccent</item>
    </style>

    <style name="NoueTheme.Login.Button" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/secondaryRippleColor</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoueTheme.Text">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NoueTheme.Text.Padding">
        <item name="android:paddingStart">@dimen/padding_text_x</item>
        <item name="android:paddingEnd">@dimen/padding_text_x</item>
        <item name="android:paddingTop">@dimen/padding_text_y</item>
        <item name="android:paddingBottom">@dimen/padding_text_y</item>
    </style>

    <style name="NoueTheme.Text.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NoueTheme.Text.Description" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textColor">@color/descriptionTextColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NoueTheme.Text.Error">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="NoueTheme.Nav">
        <item name="colorControlHighlight">@color/transparent</item>
    </style>

    <style name="NoueTheme.AppAlertDialogContent">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="NoueTheme.AppPreference" />

    <style name="NoueTheme.AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="NoueTheme.AppPreference.Theme" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceFragmentCompatStyle">
            @style/NoueTheme.AppPreference.FragmentCompatStyle
        </item>
    </style>

    <style name="NoueTheme.AppPreference.FragmentCompatStyle" parent="@style/PreferenceFragment.Material" />

    <style name="NoueTheme.About" />

    <style name="NoueTheme.About.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="NoueTheme.About.Description" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>
</resources>
